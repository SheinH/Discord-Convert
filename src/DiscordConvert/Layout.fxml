<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fillHeight="false">
         <children>
            <TextField fx:id="fileTextField" promptText="File" prefWidth="200"/>
            <Button fx:id="fileChooseButton" mnemonicParsing="false" text="..." />
         </children>
      </HBox>
      <Label text="Encoding" />
      <VBox style="-fx-alignment: center;">
         <children>
            <RadioButton mnemonicParsing="false" text="mp4" selected="true">
               <toggleGroup>
                  <ToggleGroup fx:id="codecToggleGroup"/>
               </toggleGroup>
               <VBox.margin>
                  <Insets right="10.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="webm" toggleGroup="$codecToggleGroup" />
         </children>
      </VBox>
      <Button fx:id="convertButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Convert" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
